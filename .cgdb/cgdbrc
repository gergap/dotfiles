set autosourcereload
set ignorecase
set tabstop=4
set winminheight=2
set wrapscan
set incsearch
set hlsearch
set eld=longarrow # shortarrow, longarrow, highlight, block
set sld=highlight # shortarrow, longarrow, highlight, block

map <F5>  :continue<CR>
map <F10> :next<CR>
map <F11> :step<CR>
map <F12> :finish<CR>

hi Statement ctermfg=Cyan
hi Type      ctermfg=Green
hi Constant  ctermfg=Yellow
hi Comment   ctermfg=Gray         term=standout
hi PreProc   ctermfg=DarkMagenta
hi Normal    ctermfg=White

hi StatusLine               ctermfg=Black     ctermbg=Yellow
hi Search                   ctermfg=White     ctermbg=Green
hi IncSearch                ctermfg=White     ctermbg=Red
hi SelectedLineArrow        ctermfg=White     ctermbg=Black
hi ExecutingLineArrow       ctermfg=Green     ctermbg=Black
hi SelectedLineHighlight    ctermfg=Black     ctermbg=LightGray
hi ExecutingLineHighlight   ctermfg=White     ctermbg=Green
hi SelectedLineBlock        ctermfg=White     ctermbg=Black
hi ExecutingLineBlock       ctermfg=White     ctermbg=Green
hi Breakpoint               ctermfg=Red       ctermbg=Black
hi DisabledBreakpoint       ctermfg=White     ctermbg=Black
hi SelectedLineNr           ctermfg=White     ctermbg=Black
hi ExecutingLineNr          ctermfg=Green     ctermbg=Black
hi ScrollModeStatus         ctermfg=White     ctermbg=Black
hi Logo                     ctermfg=Yellow #    ctermbg=Black
hi Mark                     ctermfg=Red     ctermbg=Black
