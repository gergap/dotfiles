# Some useful aliases.
# Source this from your .bashrc
# Author: Gerhard Gappmeier
# Copyright (C) 2012

# copy/paste for commandline
alias pbcopy='xsel --clipboard --input'
alias pbpaste='xsel --clipboard --output'

# normal mode
alias show="impressive --nologo -T200 -c persistent"
# Dual Head FullHD
alias show2="impressive --nologo -T200 -c persistent -g 3840x1080"

# hexify/unhexify
alias hexify="xxd -ps"
alias unhexify="xxd -r -ps"

# start vim always as server for remote controlling
# this is useful for PDF reverse search with synctex
alias vi='vim --servername VIM'
alias vim='vim --servername VIM'

alias cbgen='cmake -G "CodeBlocks - Unix Makefiles" .'
