# default account 
source ~/.mutt/account.local.gmx
folder-hook $folder 'source ~/.mutt/account.local.gmx'
source ~/.mutt/account.local.ascolab
folder-hook $folder 'source ~/.mutt/account.local.ascolab'
# macro for switching accounts
macro index <f2> '<sync-mailbox><refresh><enter-command>source ~/.mutt/account.local.gmx<enter><change-folder>!<enter><check-stats>'
macro index <f3> '<sync-mailbox><refresh><enter-command>source ~/.mutt/account.local.ascolab<enter><change-folder>!<enter><check-stats>'
#macro index <f2> '<change-folder>~/Mail/gmx/INBOX<enter>'
#macro index <f3> '<change-folder>~/Mail/ascolab/INBOX<enter>'

# Reduce polling frequency to a sane level
set mail_check=60
# And poll the current mailbox more often (not needed with IDLE in post 1.5.11)
set timeout=10
# keep a cache of headers for faster loading (1.5.9+?)
#set header_cache="~/.mutt/cache/headers"
#set message_cachedir = "~/.mutt/cache/bodies"
set certificate_file = "~/.mutt/certificates"
# Display download progress every 5K
set net_inc=5"

# some highlight in the message index
#               fgcolor     bgcolor     flags
color index     black       default     ~D  # deleted
color index     default     yellow      ~T  # tagged
color index     default     red         ~F  # flagged
color index     yellow      blue        ~v  # collapsed thread
color index     default     magenta     ~k  # GPG
color index     default     green       ~N  # new

# diff highlighting in mails, useful for git patches
color body cyan default "^diff \-.*"
color body cyan default "^index [a-f0-9].*"
color body cyan default "^\-\-\- .*"
color body cyan default "^[\+]{3} .*"
color body green default "^[\+][^\+]+.*"
color body red  default "^\-[^\-]+.*"
color body brightblue default "^@@ .*"

# some macros for attchment saving
# save attchment in default path with option to modify path
macro attach W <save-entry><kill-line>/home/gergap/attachments/
# save attchament (ical file) to ~/calcurse
macro attach C <save-entry><kill-line>/home/gergap/.calcurse/import/<enter>

source ~/.mutt/sidebar

color indicator black cyan

